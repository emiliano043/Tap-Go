@page
@model dynamic
@{
    Layout = "~/Pages/Shared/_LayoutPerfil.cshtml";
    ViewData["Title"] = "Perfil";
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")">
}

<script src="~/js/auth-guard.js"></script>
<script src="~/js/api.js"></script>
<script src="/js/perfil.js"></script>

<div class="page-container">
    <div class="formwrapper">
        <h2>Cambiar Contraseña</h2>

        <form id="cambiarPasswordForm" class="formulario">
            <div class="input-group">
                <input type="password" id="passwordActual" placeholder="Contraseña actual" required />
            </div>
            <div class="input-group">
                <input type="password" id="nuevaPassword" placeholder="Nueva contraseña" required />
            </div>
            <div class="input-group">
                <input type="password" id="confirmarPassword" placeholder="Confirmar nueva contraseña" required />
            </div>
            <button type="submit" class="btn-guardar">Guardar cambios</button>
        </form>

        <div id="resultadoCambio" class="mensaje-cambio"></div>
    </div>
</div>
