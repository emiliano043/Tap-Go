@page
@model dynamic
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Productos";
    <link rel="stylesheet" href="@Url.Content("~/css/admin.css")">
}

<script src="~/js/auth-guard.js"></script>
<script src="~/js/api.js"></script>
<script src="/js/productos.js"></script>

<div class="page-container">

    <h2>Agregar Producto</h2>
    <form id="formProducto">
        <input type="text" id="nombre" placeholder="Nombre" required />
        <input type="text" id="categoria" placeholder="Categoría" required />
        <input type="text" id="tipo" placeholder="Tipo" required />
        <input type="text" id="descripcion" placeholder="Descripción" />
        <input type="text" id="imagen" placeholder="Imagen" />
        <input type="number" step="0.01" id="stock" placeholder="Stock" required />
        <input type="number" step="0.01" id="calorias" placeholder="Calorías" />
        <input type="number" step="0.01" id="precioChico" placeholder="Precio Chico" required />
        <input type="number" step="0.01" id="precioMediano" placeholder="Precio Mediano" required />
        <input type="number" step="0.01" id="precioGrande" placeholder="Precio Grande" required />
        <button type="submit" id="btnGuardar">Agregar Producto</button>
        <input type="hidden" id="productoId" />
    </form>
    <div id="form-error" style="color:red; margin-top:10px;"></div>

    <hr />

    <h2>Listado de Productos</h2>
    <div id="tabla-productos"></div>

</div>