@page
@model dynamic
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Usuarios";
    <link rel="stylesheet" href="~/css/admin.css" />
}

<script src="~/js/auth-guard.js"></script>
<script src="~/js/api.js"></script>
<script src="~/js/usuarios.js"></script>

<div class="page-container">

    <form id="formUsuario">
        <input type="text" id="email" placeholder="Correo electrónico" required />
        <select id="rol" required>
            <option value="">Seleccionar rol</option>
            <option value="admin">Admin</option>
            <option value="mesero">Mesero</option>
            <option value="cliente">Cliente</option>
            <option value="cocina">Cocina</option>
        </select>
        <input type="text" id="nombre" placeholder="Nombre (opcional)" />
        <input type="password" id="passwordHash" placeholder="Contraseña" />
        <button type="submit" id="btnGuardarUsuario">Agregar Usuario</button>
        <input type="hidden" id="usuarioId" />
    </form>

    <div id="form-usuario-error" style="color:red; margin-top:10px;"></div>

    <hr />

    <h2>Lista de Usuarios</h2>
    <div id="tabla-usuarios"></div>


</div>